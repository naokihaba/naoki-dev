---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import 'github-markdown-css/github-markdown-light.css';

type Props = CollectionEntry<'blog'>['data'] & { slug: string };

const { title, description, pubDate, updatedDate, heroImage, slug } = Astro.props;
const ogImage = `/og/${slug}.png`;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} ogImage={ogImage} />
		<style is:global>
			.markdown-body {
				box-sizing: border-box;
				min-width: 200px;
				max-width: 720px;
				margin: 0 auto;
				padding: 1em;
			}
			[data-theme="dark"] .markdown-body {
				color: #c9d1d9;
				background-color: transparent;
			}
			[data-theme="dark"] .markdown-body h1,
			[data-theme="dark"] .markdown-body h2,
			[data-theme="dark"] .markdown-body h3,
			[data-theme="dark"] .markdown-body h4,
			[data-theme="dark"] .markdown-body h5,
			[data-theme="dark"] .markdown-body h6 {
				color: #c9d1d9;
				border-bottom-color: #21262d;
			}
			[data-theme="dark"] .markdown-body a {
				color: #58a6ff;
			}
			[data-theme="dark"] .markdown-body code {
				background-color: rgba(110, 118, 129, 0.4);
			}
			[data-theme="dark"] .markdown-body pre {
				background-color: #161b22;
			}
			[data-theme="dark"] .markdown-body blockquote {
				border-left-color: #3b434b;
				color: #8b949e;
			}
			[data-theme="dark"] .markdown-body hr {
				background-color: #21262d;
			}
			[data-theme="dark"] .markdown-body table tr {
				background-color: transparent;
				border-top-color: #21262d;
			}
			[data-theme="dark"] .markdown-body table th,
			[data-theme="dark"] .markdown-body table td {
				border-color: #30363d;
			}
			[data-theme="light"] .markdown-body {
				background-color: transparent;
			}
			.markdown-body ul,
			.markdown-body ol {
				padding-left: 2em;
			}
			.markdown-body ul {
				list-style-type: disc;
			}
			.markdown-body ol {
				list-style-type: decimal;
			}
			.markdown-body ul ul {
				list-style-type: circle;
			}
			.markdown-body ul ul ul {
				list-style-type: square;
			}
			.markdown-body li {
				margin-top: 0.25em;
			}
		</style>
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="markdown-body">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
