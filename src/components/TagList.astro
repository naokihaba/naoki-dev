---
import { css } from '../../styled-system/css';

interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

{tags.length > 0 && (
  <div class={css({
    display: 'flex',
    flexWrap: 'wrap',
    gap: '0.5rem',
    marginTop: '0.75rem',
  })}>
    {tags.map((tag) => (
      <a
        href={`/tags/${tag}/`}
        class={css({
          display: 'inline-block',
          padding: '0.25rem 0.75rem',
          fontSize: '0.75rem',
          color: 'accent',
          bg: 'bgCode',
          borderRadius: '9999px',
          textDecoration: 'none',
          transition: 'all 0.2s ease',
        })}
      >
        #{tag}
      </a>
    ))}
  </div>
)}
