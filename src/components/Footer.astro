---
import { css } from '../../styled-system/css';

const today = new Date();
---

<footer class={css({
	position: 'relative',
	left: '50%',
	transform: 'translateX(-50%)',
	width: '100vw',
	padding: { base: '1.5em 0.75em 4em', md: '2em 1em 6em' },
	color: 'textMuted',
	display: 'flex',
	flexDirection: 'column',
	alignItems: 'center',
	justifyContent: 'center',
	textAlign: 'center',
	fontSize: { base: '0.75rem', md: '0.875rem' },
})}>
	&copy; {today.getFullYear()} NaokiHaba. All rights reserved.
	<div class={css({
		display: 'flex',
		justifyContent: 'center',
		gap: { base: '0.75em', md: '1em' },
		marginTop: { base: '0.75em', md: '1em' },
		'& a': {
			textDecoration: 'none',
			color: 'textMuted',
		},
		'& a:hover': {
			color: 'text',
		},
	})}>
	</div>
</footer>
