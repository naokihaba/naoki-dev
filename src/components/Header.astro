---
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import { css } from '../../styled-system/css';
---

<header class={css({
	margin: 0,
	padding: '0 1em',
	bg: 'bgHeader',
	boxShadow: '0 2px 8px rgba(0, 0, 0, 0.05)',
	transition: 'background-color 0.3s ease',
})}>
	<nav class={css({
		display: 'flex',
		alignItems: 'center',
		justifyContent: 'space-between',
	})}>
		<h2 class={css({ margin: 0, fontSize: '1em' })}>
			<a href="/" class={css({ textDecoration: 'none' })}>{SITE_TITLE}</a>
		</h2>
		<div class={css({
			display: 'flex',
			alignItems: 'center',
			gap: '0.5rem',
			'@media (max-width: 720px)': {
				'& > a': { display: 'none' },
			},
		})}>
			<ThemeToggle />
			<a href="https://x.com/naokihaba" target="_blank">
				<span class="sr-only">Follow @naokihaba on X</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
					></path></svg
				>
			</a>
			<a href="https://github.com/naokihaba" target="_blank">
				<span class="sr-only">Go to @naokihaba's GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>

<style>
	nav a {
		padding: 1em 0.5em;
		color: var(--colors-text);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a:hover,
	nav a.active {
		border-bottom-color: var(--colors-accent);
	}
</style>
