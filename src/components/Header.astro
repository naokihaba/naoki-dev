---
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import { css } from '../../styled-system/css';
---

<header class={css({
	margin: 0,
	padding: '0 1em',
	bg: 'bgHeader',
	boxShadow: '0 2px 8px rgba(0, 0, 0, 0.05)',
	transition: 'background-color 0.3s ease',
})}>
	<nav class={css({
		display: 'flex',
		alignItems: 'center',
		justifyContent: 'space-between',
	})}>
		<h2 class={css({ margin: 0, fontSize: '1em' })}>
			<a href="/" class={css({ textDecoration: 'none' })}>{SITE_TITLE}</a>
		</h2>
		<div class={css({
			display: 'flex',
			alignItems: 'center',
			gap: '0.5rem',
			'@media (max-width: 720px)': {
				'& > a': { display: 'none' },
			},
		})}>
			<ThemeToggle />
			<a href="https://my-pull-requests.naosprintrunner6385.workers.dev/" target="_blank">
				<span class="sr-only">My Pull Requests</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="28" height="28"
					><path
						fill="currentColor"
						d="M1.5 3.25a2.25 2.25 0 1 1 3 2.122v5.256a2.251 2.251 0 1 1-1.5 0V5.372A2.25 2.25 0 0 1 1.5 3.25Zm5.677-.177L9.573.677A.25.25 0 0 1 10 .854V2.5h1A2.5 2.5 0 0 1 13.5 5v5.628a2.251 2.251 0 1 1-1.5 0V5a1 1 0 0 0-1-1h-1v1.646a.25.25 0 0 1-.427.177L7.177 3.427a.25.25 0 0 1 0-.354ZM3.75 2.5a.75.75 0 1 0 0 1.5.75.75 0 0 0 0-1.5Zm0 9.5a.75.75 0 1 0 0 1.5.75.75 0 0 0 0-1.5Zm8.25.75a.75.75 0 1 0 1.5 0 .75.75 0 0 0-1.5 0Z"
					></path></svg
				>
			</a>
			<a href="https://x.com/naokihaba" target="_blank">
				<span class="sr-only">Follow @naokihaba on X</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
					></path></svg
				>
			</a>
			<a href="https://github.com/naokihaba" target="_blank">
				<span class="sr-only">Go to @naokihaba's GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<a href="/rss.xml" target="_blank">
				<span class="sr-only">RSS Feed</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"
					></path></svg
				>
			</a>
			<a href="https://ghchart.rshah.org/NaokiHaba" target="_blank">
				<span class="sr-only">GitHub Contributions</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>

<style>
	nav a {
		padding: 1em 0.5em;
		color: var(--colors-text);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}

	nav a:hover,
	nav a.active {
		border-bottom-color: var(--colors-accent);
	}
</style>
